{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ToolInvocationEnvelope",
  "type": "object",
  "required": [
    "tool_name",
    "request_id",
    "actor",
    "payload"
  ],
  "properties": {
    "tool_name": {
      "type": "string"
    },
    "request_id": {
      "type": "string",
      "format": "uuid"
    },
    "correlation_id": {
      "type": "string"
    },
    "actor": {
      "type": "object"
    },
    "payload": {
      "type": "object"
    }
  }
}