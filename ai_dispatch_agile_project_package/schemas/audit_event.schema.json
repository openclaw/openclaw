{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AuditEvent",
  "type": "object",
  "required": [
    "id",
    "ticket_id",
    "actor",
    "tool_name",
    "request_id",
    "created_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "ticket_id": {
      "type": "string",
      "format": "uuid"
    },
    "actor": {
      "type": "object",
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "HUMAN",
            "AGENT",
            "SERVICE",
            "SYSTEM"
          ]
        },
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "tool_name": {
      "type": "string"
    },
    "request_id": {
      "type": "string",
      "format": "uuid"
    },
    "correlation_id": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    },
    "before_state": {
      "type": "string"
    },
    "after_state": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}