{
  "dashboard": {
    "id": null,
    "title": "OpenClaw Infrastructure Monitoring",
    "tags": ["openclaw", "infrastructure", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Gateway Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"openclaw-gateway\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "openclaw_sessions_active_total",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Queue Depth",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(openclaw_queue_depth_sum[5m]) / rate(openclaw_queue_depth_count[5m])",
            "refId": "A",
            "legendFormat": "Avg Queue Depth"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Message Processing Rate",
        "type": "timeseries", 
        "targets": [
          {
            "expr": "rate(openclaw_message_processed_total[5m])",
            "refId": "A",
            "legendFormat": "{{outcome}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(openclaw_message_processed_total{outcome=\"error\"}[5m]) / rate(openclaw_message_processed_total[5m])",
            "refId": "A",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Response Time Distribution",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(openclaw_message_duration_ms_bucket[5m]))",
            "refId": "A",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(openclaw_message_duration_ms_bucket[5m]))",
            "refId": "B", 
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(openclaw_message_duration_ms_bucket[5m]))",
            "refId": "C",
            "legendFormat": "99th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}