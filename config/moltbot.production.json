{
  "browser": {
    "headless": true,
    "noSandbox": true
  },
  "models": {
    "providers": {
      "pipbot": {
        "baseUrl": "https://beaming-koala-897.convex.site",
        "apiKey": "${PIPBOT_SERVICE_TOKEN}",
        "api": "anthropic-messages",
        "headers": {
          "x-clerk-id": "${CLERK_USER_ID}"
        },
        "models": [
          {
            "id": "claude-sonnet-4-20250514",
            "name": "Claude Sonnet 4",
            "reasoning": false,
            "input": ["text", "image"],
            "cost": { "input": 3, "output": 15, "cacheRead": 0.3, "cacheWrite": 3.75 },
            "contextWindow": 200000,
            "maxTokens": 8192
          },
          {
            "id": "claude-haiku-4-5-20251001",
            "name": "Claude Haiku 4.5",
            "reasoning": false,
            "input": ["text", "image"],
            "cost": { "input": 1, "output": 5, "cacheRead": 0.1, "cacheWrite": 1.25 },
            "contextWindow": 200000,
            "maxTokens": 8192
          },
          {
            "id": "claude-opus-4-20250514",
            "name": "Claude Opus 4",
            "reasoning": false,
            "input": ["text", "image"],
            "cost": { "input": 15, "output": 75, "cacheRead": 1.5, "cacheWrite": 18.75 },
            "contextWindow": 200000,
            "maxTokens": 8192
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "pipbot/claude-sonnet-4-20250514"
      },
      "models": {
        "pipbot/claude-sonnet-4-20250514": {},
        "pipbot/claude-haiku-4-5-20251001": {},
        "pipbot/claude-opus-4-20250514": {}
      },
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "workspace": "/data",
      "heartbeat": {
        "every": "30m",
        "activeHours": {
          "start": "08:00",
          "end": "22:00",
          "timezone": "America/Los_Angeles"
        }
      }
    }
  },
  "auth": {
    "profiles": {}
  },
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "auth": {
      "mode": "token"
    }
  }
}
