# ==============================================
# OpenClaw Docker Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===================
# Model Provider
# ===================
# Choose one model provider and add your API key

# Zhipu AI (GLM-4.7, GLM-4-Air, etc.)
ZHIPU_API_KEY=your_zhipu_api_key_here

# OpenAI (GPT-4, GPT-3.5, etc.)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere
# COHERE_API_KEY=your_cohere_api_key_here

# ===================
# Gateway Configuration
# ===================
# Gateway authentication token
# Set to 'auto' to generate automatically, or provide your own secure token
GATEWAY_TOKEN=auto

# Default model (e.g., zhipu/GLM-4.7, openai/gpt-4, claude/claude-3-opus)
OPENCLAW_MODEL=zhipu/GLM-4.7

# Gateway mode: local | remote
GATEWAY_MODE=local

# Gateway binding (default: 0.0.0.0)
GATEWAY_BIND=0.0.0.0

# Gateway port (default: 18789)
GATEWAY_PORT=18789

# ===================
# Communication Channels
# ===================
# Add channel credentials to enable push notifications

# Telegram Bot
# 1. Create a bot via @BotFather on Telegram
# 2. Copy the token here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# WhatsApp (Cloud API)
# WHATSAPP_PHONE_ID=your_phone_id
# WHATSAPP_ACCESS_TOKEN=your_access_token

# Slack Bot
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_SIGNING_SECRET=your-signing-secret

# Discord Bot
# DISCORD_BOT_TOKEN=your_discord_bot_token

# ===================
# Email (for notifications)
# ===================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=OpenClaw <noreply@openclaw.ai>

# ===================
# Advanced Options
# ===================
# Enable verbose logging
# VERBOSE=false

# Enable reasoning mode
# REASONING=off

# Log level: error | warn | info | debug
# LOG_LEVEL=info

# Timezone (for cron jobs)
# TZ=Asia/Shanghai

# ===================
# Security
# ===================
# Allowed origins for dashboard (CORS)
# ALLOWED_ORIGINS=http://localhost:18789,http://localhost:3000

# Enable/disable metrics collection
# ENABLE_METRICS=false
