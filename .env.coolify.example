# OpenClaw Coolify Deployment Configuration
# Copy to Coolify environment variables or .env file

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Gateway authentication token
# Auto-generated on first run if not set, but recommended to set explicitly
# for persistence across full service deletion
# Generate: openssl rand -hex 32
OPENCLAW_GATEWAY_TOKEN=

# ZAI API Key for model access
# Get from: https://z.ai/
# DEFAULT IS FAKE - REPLACE WITH YOUR REAL KEY
ZAI_API_KEY=PLACEHOLDER_KEY

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Gateway port (default: 28471 - non-standard for security)
OPENCLAW_GATEWAY_PORT=28471

# Gateway bind address (default: 0.0.0.0 for Coolify)
OPENCLAW_GATEWAY_BIND=0.0.0.0

# Node environment (default: production)
NODE_ENV=production
