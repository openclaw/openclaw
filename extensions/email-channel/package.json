{
  "name": "@openclaw/email",
  "version": "1.0.0",
  "private": true,
  "description": "OpenClaw Email channel plugin - Send and receive messages via IMAP/SMTP",
  "type": "module",
  "main": "index.ts",
  "keywords": [
    "openclaw",
    "plugin",
    "channel",
    "email",
    "imap",
    "smtp"
  ],
  "author": "OpenClaw Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openclaw/openclaw",
    "directory": "extensions/email-channel"
  },
  "bugs": {
    "url": "https://github.com/openclaw/openclaw/issues"
  },
  "openclaw": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "email",
      "label": "Email",
      "selectionLabel": "Email (IMAP/SMTP)",
      "docsPath": "/channels/email",
      "blurb": "Send and receive email via IMAP/SMTP servers.",
      "order": 100,
      "aliases": [
        "mail",
        "smtp"
      ]
    }
  },
  "dependencies": {
    "imap": "^0.8.19",
    "mailparser": "^3.6.9",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "openclaw": "workspace:*",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
