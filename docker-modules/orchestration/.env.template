#==============================================================================
# OpenClaw Production Environment Configuration
#==============================================================================

#------------------------------------------------------------------------------
# Core Settings
#------------------------------------------------------------------------------

# Docker image names
OPENCLAW_IMAGE=openclaw:production
OPENCLAW_SANDBOX_IMAGE=openclaw-sandbox:production
OPENCLAW_BROWSER_IMAGE=openclaw-browser:production

# Gateway configuration
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_BIND=lan

# Authentication token (auto-generated during setup)
OPENCLAW_GATEWAY_TOKEN=

#------------------------------------------------------------------------------
# AI Provider Credentials (Choose ONE method)
#------------------------------------------------------------------------------

# OPTION 1: Anthropic API Key (RECOMMENDED for production)
# Get from: https://console.anthropic.com/settings/keys
# Pros: Stable, doesn't expire, official API
# Cons: Paid per token
ANTHROPIC_API_KEY=

# OPTION 2: Claude.ai Session Key (for personal use)
# Extract from browser cookies at claude.ai
# Pros: Uses your existing subscription (free tier available)
# Cons: Can expire, less stable
# CLAUDE_AI_SESSION_KEY=

# Alternative Claude web credentials (optional)
# CLAUDE_WEB_SESSION_KEY=
# CLAUDE_WEB_COOKIE=

# Other AI providers (optional)
# OPENAI_API_KEY=
# GOOGLE_AI_API_KEY=

#------------------------------------------------------------------------------
# Database Configuration
#------------------------------------------------------------------------------

# PostgreSQL password (auto-generated during setup)
POSTGRES_PASSWORD=

# Database URL is auto-configured from POSTGRES_PASSWORD
# DATABASE_URL=postgresql://openclaw:${POSTGRES_PASSWORD}@postgres:5432/openclaw

#------------------------------------------------------------------------------
# Security Settings
#------------------------------------------------------------------------------

# Enable security features
OPENCLAW_ENABLE_SECURITY=true

# Encryption key for vault storage (auto-generated during setup)
OPENCLAW_ENCRYPTION_KEY=

# Audit logging
OPENCLAW_AUDIT_LOGGING=true
OPENCLAW_AUDIT_RETENTION_DAYS=90

#------------------------------------------------------------------------------
# Sandbox Configuration
#------------------------------------------------------------------------------

# Code execution sandbox limits
SANDBOX_TIMEOUT=30
SANDBOX_MEMORY_LIMIT=512
SANDBOX_CPU_LIMIT=2.0
SANDBOX_PID_LIMIT=100

# Browser sandbox ports (optional)
OPENCLAW_VNC_PORT=5900
OPENCLAW_NOVNC_PORT=6080

#------------------------------------------------------------------------------
# Monitoring Configuration (Optional)
#------------------------------------------------------------------------------

# Enable monitoring stack
ENABLE_PROMETHEUS=false
ENABLE_LOKI=false

# Monitoring ports
PROMETHEUS_PORT=9090
LOKI_PORT=3100
GRAFANA_PORT=3000

#------------------------------------------------------------------------------
# Backup Configuration
#------------------------------------------------------------------------------

# Automatic backups
OPENCLAW_AUTO_BACKUP=true
OPENCLAW_BACKUP_INTERVAL=24
OPENCLAW_BACKUP_RETENTION=30

#------------------------------------------------------------------------------
# Resource Limits
#------------------------------------------------------------------------------

# Gateway resource limits
GATEWAY_MEMORY_LIMIT=2G
GATEWAY_CPU_LIMIT=2.0

# Database resource limits
POSTGRES_MEMORY_LIMIT=512M
POSTGRES_CPU_LIMIT=1.0

# Redis resource limits
REDIS_MEMORY_LIMIT=256M
REDIS_CPU_LIMIT=0.5

#------------------------------------------------------------------------------
# Network Configuration
#------------------------------------------------------------------------------

# Internal network subnet
OPENCLAW_INTERNAL_SUBNET=172.20.0.0/16

# Sandbox network subnet (isolated, no internet)
OPENCLAW_SANDBOX_SUBNET=172.21.0.0/16

#------------------------------------------------------------------------------
# Logging Configuration
#------------------------------------------------------------------------------

# Log level (debug, info, warn, error)
OPENCLAW_LOG_LEVEL=info

# Log format (json, text)
OPENCLAW_LOG_FORMAT=json

# Log retention
OPENCLAW_LOG_RETENTION_DAYS=30
