{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Router LLM Import Exceptions Manifest",
  "description": "Schema for timeboxed exceptions to LLM import restrictions",
  "type": "object",
  "required": ["version", "exceptions"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "reason", "expiresAt", "removalTicket"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Literal file path. No globs or wildcards allowed.",
            "pattern": "^[^*?\\[\\]]+$"
          },
          "reason": {
            "type": "string",
            "minLength": 10,
            "description": "Non-empty string explaining why exception is needed"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO8601 UTC datetime (YYYY-MM-DDTHH:mm:ssZ)"
          },
          "removalTicket": {
            "type": "string",
            "minLength": 1,
            "description": "Tracking ticket for removal"
          },
          "gates": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["A", "B", "C"]
            },
            "description": "Which gates this exception applies to"
          }
        },
        "additionalProperties": false
      }
    },
    "rules": {
      "type": "object",
      "description": "Documentation of validation rules"
    }
  }
}
